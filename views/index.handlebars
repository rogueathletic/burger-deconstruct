<div class="container" alt="The header">
  <div class="row">
    <div class="col">
      <nav class="container vertical-center">
        <h1 id="burger"> BURGER</h1>
        <h4 id="deconstruct"> DECONSTRUCT</h4>
        <div id="menu">
          <span><a href="#top">BURGERS API</a> </span> |
          <span> <a href="https://bit.ly/2F6E1C7">GITHUB</a></span> |
          <span> <a href="mailto:jason@skunkworksweb.io"> CONTACT</a></span>
        </div>
      </nav>
    </div>
  </div>
</div>
