<br>

<div id="the-app" alt="the application interface">

  <div class="container">
    <div class="row text-center">

      <div class="col pull-left" alt="burger up ready to eat ">
        {{#each burger_data}} {{#unless this.devoured}}
      </div>


			<div class="col pull-right" alt="Button to clear served berger">
        <form class="devour-form button-size">
          <input type="hidden" class="burger_id" type="text" value={{this.id}} alt="button to consume burger">
          <button type="submit" id="eat-btn" class="btn btn-info"><span id="btn-txt">E A T &nbsp; M E</span></button>
        </form>
      </div>





      <div class="w-100"></div>

      <div>{{this.id}}. {{this.burger_name}}
      </div>{{this.Date}}


      <div class="col justify-content-left">
        {{/unless}} {{/each}}
      </div>

      <div class="col justify-content-right">
        {{#each burger_data}} {{#if this.devoured}}
        <input class="form-control " id="form-control-eaten" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly> {{/if}} {{/each}}
      </div>
    </div>
  </div>


  <div class="container">
    <div class="row text-center">
      <div class="col">
        <form action="/burgers/create" method="POST">
          <input id="order-submission-form" type="text" class="form-control" placeholder="Place your order here:" name="burger_name" value="" id="enter_text">
          <br>
          <button type="submit" class="btn btn-info" id="text-enter-button">S U B M I T </button>
          <br>
        </form>
      </div>
    </div>
  </div>

  <img src="https://i.imgur.com/cKcfTpk.png" id="left-burger" alt="curiously deconstructed burger top bun">

  <img src="https://i.imgur.com/dfAyCKc.png" id="right-burger" alt="curiously deconstructed burger top bun">


