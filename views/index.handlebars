		<div id="the-app">
		<div class="col-md- text-center" class="task">
			<div class="row">
			  {{#each burger_data}}
             
			  	{{#unless this.devoured}}
<div class="col-md-6 text-center">
					<form class="devour-form button-size">
						<input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
						<button type="submit" id="eat-btn" class="btn btn-info"><span id="btn-txt">E A T &nbsp; M E</span></button>
					</form>
				</div>
				<div class="col-md-6 text-center" id='order-up'>
					<pre>{{this.id}}. {{this.burger_name}}
					</pre>
				  	 {{this.Date}}
				</div>
				{{/unless}}
			  {{/each}}
			</div>
		</div>

		<div class="col-lg-12 " id="order-placed" class="task">
			  {{#each burger_data}}
			  	{{#if this.devoured}}
			  		<input class="form-control " id="form-control-eaten" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
				{{/if}}
			  {{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-lg-12 text-center enter_section">
			<form action="/burgers/create" method="POST">
				<input id="order-submission-form" type="text" class="form-control" placeholder="Place your order here:" name="burger_name" value="" id="enter_text">
                <br>
				<button type="submit" class="btn btn-info" id="text-enter-button">S U B M I T </button>
			<br>
            </form>
		</div>
	</div>
</div>
